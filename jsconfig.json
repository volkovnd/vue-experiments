{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es2019"
  },
  "typeAcquisition": {
    "exclude": [
      "dotenv",
      "html-entities",
      "source-map",
      "mdast-util-from-markdown",
      "mdast-util-to-markdown"
    ]
  }
}
